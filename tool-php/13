    return json_decode($access);
}
function delay($delay){
	for($tt = $delay ;$tt>= 1;$tt--){
        echo "\r\033[1;33m   LMK - Tool \033[1;31m | $tt | "; usleep(150000);
        echo "\r\033[1;31m   LMK - Tool \033[0;31m | $tt | "; usleep(150000);
        echo "\r\033[1;32m   LMK - Tool \033[0;31m | $tt | "; usleep(150000);
        echo "\r\033[1;34m   LMK - Tool \033[0;31m | $tt | "; usleep(150000);
        echo "\r\033[1;35m   LMK - Tool \033[0;31m | $tt | "; usleep(150000);
        echo "\r\033[1;35m   LMK - Tool \033[0;31m | $tt | "; usleep(150000);
        echo "\r\033[1;35m   LMK - Tool \033[0;31m | $tt | ";usleep(150000);} 
echo "\r\e[1;95m    🔰LMK-TOOL🔰                  \r"; }
function chay($t) { for ($x = 0; $x <= $t; $x++) { echo "\033[1;37m- ";usleep(4000); } echo"\n";}